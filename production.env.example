# Production Environment Variables for Sync HRMS
# Copy this file to .env and update with your production values

# Application Configuration
NODE_ENV=production
PORT=3001

# Email Configuration (Required for contact forms)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Sync HRMS

# CORS Configuration
CORS_ORIGIN=https://synchrm.com
CORS_ORIGINS=https://synchrm.com,https://www.synchrm.com,http://synchrm.com,http://www.synchrm.com,http://125.18.84.106:8015,http://125.18.84.106:8080,https://125.18.84.106:8015,https://125.18.84.106:8080

# Database Configuration (Optional - for future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=hrms_production
# DB_USER=hrms_user
# DB_PASS=your-secure-db-password

# JWT Secret (Optional - for future authentication)
# JWT_SECRET=your-super-secret-jwt-key-here

# Redis Configuration (Optional - for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Monitoring and Logging
LOG_LEVEL=info
LOG_FILE=/var/log/sync-hrms/app.log

# Security
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (Optional)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/opt/sync-hrms/uploads

# External Services (Optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# SENTRY_DSN=https://your-sentry-dsn

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Performance
WORKER_PROCESSES=auto
MAX_CONNECTIONS=1000
